<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @grau.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @grau.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="grau[id_grau]" class="fieldLabel">Id grau</label>
            <input type="text" id="grau[id_grau]" name="grau[id_grau]" <%= placeholder("Id grau") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="grau[grau]" class="fieldLabel">Grau</label>
            <input type="text" id="grau[grau]" name="grau[grau]" <%= placeholder("Grau") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
