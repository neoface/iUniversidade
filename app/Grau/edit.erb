<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @grau.id_grau %></h1>
    <a href="<%= url_for :action => :show, :id => @grau.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @grau.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @grau.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="grau[id_grau]" class="fieldLabel">Id grau</label>
            <input type="text" id="grau[id_grau]" name="grau[id_grau]" value="<%= @grau.id_grau %>" <%= placeholder( "Id grau" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="grau[grau]" class="fieldLabel">Grau</label>
            <input type="text" id="grau[grau]" name="grau[grau]" value="<%= @grau.grau %>" <%= placeholder( "Grau" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
