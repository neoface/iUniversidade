<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Curso</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @curso.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Id curso: </td>
                <td class="itemValue"><input type="text" name="curso[id_curso]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Id estabelecimento: </td>
                <td class="itemValue"><input type="text" name="curso[id_estabelecimento]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Codalternativo: </td>
                <td class="itemValue"><input type="text" name="curso[codalternativo]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Curso: </td>
                <td class="itemValue"><input type="text" name="curso[curso]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Grau: </td>
                <td class="itemValue"><input type="text" name="curso[grau]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Duracao: </td>
                <td class="itemValue"><input type="text" name="curso[duracao]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Ects: </td>
                <td class="itemValue"><input type="text" name="curso[ects]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Tipo concurso: </td>
                <td class="itemValue"><input type="text" name="curso[tipo_concurso]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Vagas: </td>
                <td class="itemValue"><input type="text" name="curso[vagas]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Prova ingresso desc: </td>
                <td class="itemValue"><input type="text" name="curso[prova_ingresso_desc]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Class min desc: </td>
                <td class="itemValue"><input type="text" name="curso[class_min_desc]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Formula calculo desc: </td>
                <td class="itemValue"><input type="text" name="curso[formula_calculo_desc]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Descricao: </td>
                <td class="itemValue"><input type="text" name="curso[descricao]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
