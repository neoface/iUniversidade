<div data-role="page">

  <div data-role="header" data-position="inline">  
      <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
        Cancel
      </a>

  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :controller => :Curso, :action => :filter_cursos_result %>">     
          <h4 class="groupTitle">Grau</h4>
        <div data-role="fieldcontain">
          <fieldset data-role="controlgroup">
            <legend>Grau:</legend>
                <% @graus.each do |grau|%>
                  <input type="checkbox" name="checkbox<%= grau.grau%>" id="checkbox<%= grau.object%>" class="custom" />
                  <label for="checkbox<%= grau.object%>"><%= grau.grau%></label>
                <%end%>
            </fieldset> 
        </div>


              <select name="distritos[id_distrito]">
              <% @distritos.each do |distrito|%>
                 <option value="<%= distrito.id_distrito%>"><%= distrito.distrito %></option>
               <%end%>
              </select>
               
      <input type="submit" value="Filtrar"/>
    </form>
  </div>
</div>

