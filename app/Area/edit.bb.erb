<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @area.object %>
    <h1>Edit <%= @area.id_area%></h1>
    <%= link_to "Delete", :action => :delete, :id => @area.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @area.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id area: </td>
              <td class="itemValue"><input type="text" name="area[id_area]" value="<%= @area.id_area %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Area: </td>
              <td class="itemValue"><input type="text" name="area[area]" value="<%= @area.area %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Descricao: </td>
              <td class="itemValue"><input type="text" name="area[descricao]" value="<%= @area.descricao %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
