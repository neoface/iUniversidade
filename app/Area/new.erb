<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @area.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @area.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="area[id_area]" class="fieldLabel">Id area</label>
            <input type="text" id="area[id_area]" name="area[id_area]" <%= placeholder("Id area") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="area[area]" class="fieldLabel">Area</label>
            <input type="text" id="area[area]" name="area[area]" <%= placeholder("Area") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="area[descricao]" class="fieldLabel">Descricao</label>
            <input type="text" id="area[descricao]" name="area[descricao]" <%= placeholder("Descricao") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
