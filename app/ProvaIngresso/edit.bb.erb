<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @prova_ingresso.object %>
    <h1>Edit <%= @prova_ingresso.id_prova_ing%></h1>
    <%= link_to "Delete", :action => :delete, :id => @prova_ingresso.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @prova_ingresso.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id prova ing: </td>
              <td class="itemValue"><input type="text" name="prova_ingresso[id_prova_ing]" value="<%= @prova_ingresso.id_prova_ing %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Prova ingresso: </td>
              <td class="itemValue"><input type="text" name="prova_ingresso[prova_ingresso]" value="<%= @prova_ingresso.prova_ingresso %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Descricao: </td>
              <td class="itemValue"><input type="text" name="prova_ingresso[descricao]" value="<%= @prova_ingresso.descricao %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
