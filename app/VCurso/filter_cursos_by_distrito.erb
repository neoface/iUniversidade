<div data-role="page">

  <div data-role="header" data-position="inline">  
      <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
        Cancel
      </a>

  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :controller => :VCurso, :action => :list_cursos_by_distrito %>">     
          <h4 class="groupTitle">Distrito</h4>

              <select name="distritos[id_distrito]">
              <% @distritos.each do |distrito|%>
                 <option value="<%= distrito.id_distrito%>"> <%= distrito.distrito %></option>
               <%end%>
              </select>
               
      <input type="submit" value="Filtrar"/>
    </form>
  </div>
  
</div>

