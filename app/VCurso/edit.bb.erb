<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @v_curso.object %>
    <h1>Edit <%= @v_curso.id_estabelecimento%></h1>
    <%= link_to "Delete", :action => :delete, :id => @v_curso.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @v_curso.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id estabelecimento: </td>
              <td class="itemValue"><input type="text" name="v_curso[id_estabelecimento]" value="<%= @v_curso.id_estabelecimento %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Id distrito: </td>
              <td class="itemValue"><input type="text" name="v_curso[id_distrito]" value="<%= @v_curso.id_distrito %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Curso: </td>
              <td class="itemValue"><input type="text" name="v_curso[curso]" value="<%= @v_curso.curso %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Grau: </td>
              <td class="itemValue"><input type="text" name="v_curso[grau]" value="<%= @v_curso.grau %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Estabelecimento: </td>
              <td class="itemValue"><input type="text" name="v_curso[estabelecimento]" value="<%= @v_curso.estabelecimento %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
