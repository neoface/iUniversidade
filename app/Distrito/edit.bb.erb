<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @distrito.object %>
    <h1>Edit <%= @distrito.id_distrito%></h1>
    <%= link_to "Delete", :action => :delete, :id => @distrito.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @distrito.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id distrito: </td>
              <td class="itemValue"><input type="text" name="distrito[id_distrito]" value="<%= @distrito.id_distrito %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Distrito: </td>
              <td class="itemValue"><input type="text" name="distrito[distrito]" value="<%= @distrito.distrito %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
